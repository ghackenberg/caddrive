        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ghackenberg/productboard.git"
    },
    "workspaces": [
        "packages/backend",
        "packages/broker",
        "packages/common",
        "packages/frontend",
        "packages/gateway",
        "packages/worker"
    ],
    "scripts": {
        "clean": "workspaces-run -- npm run clean",
        "build": "workspaces-run -- npm run build",
        "start": "docker-compose -f ./compositions/production.yml up -d && workspaces-run --parallel --ignore=\"productboard-common\" -- npm run start",
        "devel": "docker-compose -f ./compositions/development.yml up -d && workspaces-run --parallel --ignore=\"productboard-common\" -- npm run devel"
    },
    "dependencies": {
        "workspaces-run": "^1.0.1"
    },
    "engines": {
        "node": "^14.15.0",
        "npm": "^7.20.0"
    }
}
