{
    "name": "fhooe-audit-platform",
    "version": "1.0.0",
    "description": "TODO",
    "author": {
        "name": "Georg Hackenberg",
        "email": "georg.hackenberg@fh-wels.at"
    },
    "repository": {
        "type": "git",
        "url": "git@gitlab.com:georg-hackenberg/fhooe/audit-platform.git"
    },
    "private": "true",
    "scripts": {
        "start": "npm run common && concurrently -c red,green,blue,gray \"npm:backend\" \"npm:frontend\" \"npm:worker\" \"npm:gateway\"",
        "start-dev": "npm run common && concurrently -c white,red,green,blue,gray \"npm:common-dev\" \"npm:backend-dev\" \"npm:frontend-dev\" \"npm:worker-dev\" \"npm:gateway-dev\"",
        "common": "cd common && npm run compile",
        "common-dev": "cd common && npm run compile-dev",
        "backend": "cd backend && npm run start",
        "backend-dev": "cd backend && npm run start-dev",
        "frontend": "cd frontend && npm run start",
        "frontend-dev": "cd frontend && npm run start-dev",
        "worker": "cd worker && npm run start",
        "worker-dev": "cd worker && npm run start-dev",
        "gateway": "cd gateway && npm run start",
        "gateway-dev": "cd gateway && npm run start-dev"
    },
    "devDependencies": {
        "concurrently": "^6.2.0"
    }
}
